<h2 class="text-center">All Expenditures</h2>
<h4>Total Amount: <%= number_to_currency(@total_amount) %> </h4>
<%= link_to 'Add new', new_expenditure_path, class: 'btn btn-success' %>
<ul>
  <% @expenditures.each do |expenditure| %>
    <li>
      <%= expenditure.name %> &nbsp; 
      <%= number_to_currency(expenditure.amount) %> &nbsp; 
      <%= expenditure.created_at.strftime("%d/%h/%Y") %>
    </li>
  <% end %>
</ul>